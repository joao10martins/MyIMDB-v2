<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/sad_emoji_login"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_sentiment_very_dissatisfied_black_24dp"
            android:backgroundTint="@color/colorAccent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sad_emoji_login"
            android:layout_alignTop="@+id/sad_emoji_login"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:text="Woops..."
            android:textAlignment="center"
            android:textSize="48sp"
            android:textColor="@color/colorAccent"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">



        <TextView
            android:id="@+id/login_failed_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Login failed"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/login_failed_message_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="message"
            android:textColor="@color/colorLightGrey"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="150dp"
                android:layout_height="42dp"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:background="@drawable/dialog_cancel_button"
                android:text="Cancel"
                android:textColor="@color/colorPrimary" />


            <View
                android:layout_width="8dp"
                android:layout_height="42dp"

                />

            <Button
                android:id="@+id/buttonRetry"
                android:layout_width="150dp"
                android:layout_height="42dp"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:background="@drawable/dialog_button_background"
                android:text="Retry"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>




    </LinearLayout>

</LinearLayout>